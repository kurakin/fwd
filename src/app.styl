global-reset()

body
  font-size 18px

a
  font-size 15px
  color black
  text-decoration none
  &:hover
    cursor pointer
    color gray
    text-decoration underline

#App
  width 350px
  height 250px
  position absolute
  top calc(50vh - 125px)
  left calc(50vw - 175px)
  display flex
  flex-direction column
  box-sizing border-box
  align-content stretch
  transition width 1s, height 1s, left 1s, top 1s

  &.add
    left 0
    top 0
    width 100vw
    height 100vh
    transition width 1s, height 1s, left 1s, top 1s
