global-reset()

body
  font-size 18px

a
  font-size 15px
  color black
  text-decoration none
  &:hover
    cursor pointer
    color gray
    text-decoration underline

#App
  position absolute
  display flex
  flex-direction column
  align-content stretch
  box-sizing border-box
  top 0
  left 0
  bottom 0
  right 0
  transition top 1s, left 1s, bottom 1s, right 1s

.row
  display flex
  flex-direction row

input
  padding 5px
  box-sizing border-box
  font-size 16px

button
  font-size 16px
  cursor pointer

.input-group
  display flex
  flex-direction row
  font-size 16px

  input,
  span,
  ul
    border 1px solid gray
    border-width 1px 0 1px 0
    &:first-child
      border-left-width 1px
      border-radius 10px 0 0 10px
    &:last-child
      border-right-width 1px
      border-radius 0 10px 10px 0

  // match font with input
  span,
  ul
    padding 5px
    color gray

  ul
    li
      display none
      &.selected
        display block
