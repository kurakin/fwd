.footer
  display flex
  flex-direction row
  justify-content space-between

  dt
    font-weight bold
    margin-bottom .5em

  dd
    line-height 1.2em
    &:hover
      cursor pointer
      color gray

  #App.browse &
    padding 5px 1em 1em

    dl
      display flex
      white-space nowrap
      overflow hidden
      &:nth-child(n+2)
        margin-left 20px
      &:hover
        overflow visible

    dt
      margin-bottom 0
      margin-right 8px

    div
      display flex
      min-width 0

    dd
      line-height 1em
      &:nth-child(n+2)
        margin-left 5px

  #App.add &,
  #App.log-in &
    display none
