.search
  .columns
    max-width 90vw
  .url
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

@media screen and (min-width: 768px)
  .search
    .name
      flex-grow 0
      min-width 150px
    .count
      order 3
      flex-grow 0
      min-width 80px
    .date
      order 4
      flex-grow 0
      min-width 120px
